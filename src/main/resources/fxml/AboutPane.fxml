<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox spacing="10.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <children>
            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/mobitra.png" />
               </image>
            </ImageView>
            <Text id="about-app-name" fx:id="appNameText" strokeType="OUTSIDE" strokeWidth="0.0" text="Mobitra" />
         </children>
      </HBox>
      <Text fx:id="versionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Version">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Text>
      <Text fx:id="buildText" strokeType="OUTSIDE" strokeWidth="0.0" text="Build">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin></Text>
      <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="License">
               <content>
                  <ScrollPane>
                     <content>
                        <Text fx:id="licenseText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </content>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </ScrollPane>
               </content>
          </Tab>
          <Tab text="Third-party licenses">
            <content>
                  <ScrollPane>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <content>
                        <Text fx:id="thirdPartyLicenseText" strokeType="OUTSIDE" strokeWidth="0.0" />
                     </content>
                  </ScrollPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
