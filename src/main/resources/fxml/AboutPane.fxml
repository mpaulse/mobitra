<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text id="aboutAppName" fx:id="appNameText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="aboutText" text="Mobitra" />
      <Text id="aboutVersion" fx:id="versionText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="aboutText" text="Version">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Text>
      <TabPane id="aboutLicenseTabs" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="570.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="License">
               <content>
                  <ScrollPane>
                     <content>
                        <Text fx:id="licenseText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="aboutText" text="License" />
                     </content>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </ScrollPane>
               </content>
          </Tab>
          <Tab text="Third-party licenses">
            <content>
                  <ScrollPane>
                     <content>
                      <VBox>
                          <children>
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="HSQLDB" />
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="Jackson" />
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="Kotlin" />
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="Logback" />
                              <Hyperlink text="OpenJDK" />
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="OpenJFX" />
                              <Hyperlink onAction="#onShowThirdPartyLicense" text="SLF4J" />
                          </children>
                          <padding>
                              <Insets left="10.0" />
                          </padding>
                      </VBox>
                     </content>
                     <padding>
                        <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
                     </padding>
                  </ScrollPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
